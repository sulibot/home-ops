# FRR daemon configuration - IS-IS + BGP for VIP (Cilium handles pod/service BGP)
bgpd=yes
ospfd=no
ospf6d=no
ripd=no
ripngd=no
isisd=yes
pimd=no
pim6d=no
ldpd=no
nhrpd=no
eigrpd=no
babeld=no
sharpd=no
pbrd=no
bfdd=no
fabricd=no
vrrpd=no
pathd=no

# --- Listener & logging options ---
bgpd_options="-A 127.0.0.1 --log-level info -p ${bgp_port} -l ${egress_ipv6_loopback_id_ip}"
fabricd_options="-A 127.0.0.1 --log-level info"

# Increase file descriptor limits
MAX_FDS=8192
