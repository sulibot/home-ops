[Unit]
Description=Zot OCI Registry
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/zot serve /etc/zot/config.json
Restart=on-failure
RestartSec=5s
User=zot
Group=zot
StateDirectory=zot
RuntimeDirectory=zot

[Install]
WantedBy=multi-user.target
