{
  "distSpecVersion": "1.1.0",
  "storage": {
    "rootDirectory": "/var/lib/zot"
  },
  "http": {
    "address": "0.0.0.0",
    "port": "5000"
  },
  "log": {
    "level": "info"
  },
  "extensions": {
    "sync": {
      "enable": true,
      "registries": [
        {
          "urls": ["https://registry-1.docker.io"],
          "onDemand": true,
          "tlsVerify": true,
          "content": [{"prefix": "**", "destination": "/docker.io"}]
        },
        {
          "urls": ["https://ghcr.io"],
          "onDemand": true,
          "tlsVerify": true,
          "content": [{"prefix": "**", "destination": "/ghcr.io"}]
        },
        {
          "urls": ["https://gcr.io"],
          "onDemand": true,
          "tlsVerify": true,
          "content": [{"prefix": "**", "destination": "/gcr.io"}]
        },
        {
          "urls": ["https://mirror.gcr.io"],
          "onDemand": true,
          "tlsVerify": true,
          "content": [{"prefix": "**", "destination": "/mirror.gcr.io"}]
        },
        {
          "urls": ["https://registry.k8s.io"],
          "onDemand": true,
          "tlsVerify": true,
          "content": [{"prefix": "**", "destination": "/registry.k8s.io"}]
        },
        {
          "urls": ["https://quay.io"],
          "onDemand": true,
          "tlsVerify": true,
          "content": [{"prefix": "**", "destination": "/quay.io"}]
        },
        {
          "urls": ["https://lscr.io"],
          "onDemand": true,
          "tlsVerify": true,
          "content": [{"prefix": "**", "destination": "/lscr.io"}]
        },
        {
          "urls": ["https://public.ecr.aws"],
          "onDemand": true,
          "tlsVerify": true,
          "content": [{"prefix": "**", "destination": "/public.ecr.aws"}]
        },
        {
          "urls": ["https://factory.talos.dev"],
          "onDemand": true,
          "tlsVerify": true,
          "content": [{"prefix": "**", "destination": "/factory.talos.dev"}]
        }
      ]
    }
  }
}
