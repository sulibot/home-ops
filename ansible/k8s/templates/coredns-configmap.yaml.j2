apiVersion: v1
kind: ConfigMap
metadata:
  name: coredns
  namespace: kube-system
data:
  Corefile: |
    .:53 {
        errors
        health {
            lameduck 5s
        }
        ready
        kubernetes cluster.local in-addr.arpa ip6.arpa {
            pods insecure
            fallthrough in-addr.arpa ip6.arpa
            ttl 30
        }
        prometheus :9153
{% set forwarders = cluster_dns_forwarders | default([]) %}
{% if forwarders | length > 0 %}
        forward . {% for server in forwarders %}{{ server }}{% if not loop.last %} {% endif %}{% endfor %} {
            prefer_udp
        }
{% else %}
        forward . /etc/resolv.conf
{% endif %}
        cache 30
        loop
        reload
        loadbalance
    }
